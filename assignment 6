#Reverse Countdown Timer

n = int(input("Enter a number: "))
for i in range(n, 0, -1):
    print(i)


#Break the Loop on Password Match

while True:
    password = input("Enter the password: ")
    if password == "python123":
        print("Access Granted!")
        break


#Count Vowels in a Word

word = input("Enter a word: ")
vowels = "aeiouAEIOU"
count = 0

for letter in word:
    if letter in vowels:
        count += 1

print("Number of vowels:", count)


# Print All Odd Numbers Between 1 and 50 (Using for & continue)

for i in range(1, 51):
    if i % 2 == 0:
        continue
    print(i)


#Factorial Calculator (Using for loop)

n = int(input("Enter a number: "))
factorial = 1

for i in range(1, n + 1):
    factorial *= i

print("Factorial of", n, "is", factorial)

# Print Numbers 1 to 10 (Using while loop)

i = 1
while i <= 10:
    print(i)
    i += 1

# Countdown Program (Using while loop)

n = int(input("Enter a number: "))
while n >= 0:
    print(n)
    n -= 1


#Multiplication Table (Using for loop)

num = int(input("Enter a number: "))
for i in range(1, 11):
    print(f"{num} x {i} = {num * i}")


#Skip Multiples of 3 (Using continue)

for i in range(1, 21):
    if i % 3 == 0:
        continue
    print(i)

#First 5 Even Numbers (Using while + break)

i = 2
count = 0

while True:
    if i % 2 == 0:
        print(i)
        count += 1
    if count == 5:
        break
    i += 1
